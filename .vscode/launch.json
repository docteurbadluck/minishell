{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C Debugging",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/minishell",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Activer le mode d'affichage dans gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}